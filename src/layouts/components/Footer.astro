---
export interface Props {
  imageType?: string;
  class?: string;
  alt?: string;
  loading?: "eager" | "lazy";
  width?: string | number;
  height?: string | number;
}

const BASE_URL =
  "https://res.cloudinary.com/onamuapp/image/upload/q_auto,fl_immutable_cache";
const DEFAULT_IMAGE = "v1723320517/Logo-Blanco-de-Onamu-Publicidad_qwowoi.webp";

const generateSrcSet = (path: string, format: string): string => {
  return [200, 300]
    .map((w) => `${BASE_URL}/f_${format},w_${w},c_limit/${path} ${w}w`)
    .join(", ");
};

const {
  imageType = "Logo-Blanco",
  class: customClass = "",
  alt = "Imagen optimizada de Onamu Publicidad",
  loading = "eager",
  width = 220,
  height = 50,
} = Astro.props;

const path =
  imageType === "Logo-Blanco" ? DEFAULT_IMAGE : `path/to/${imageType}.webp`;
const avifSrcset = generateSrcSet(path, "avif");
const fallbackSrc = `${BASE_URL}/f_auto,q_auto,dpr_auto,fl_immutable_cache/${path}`;
const className = `optimized-image ${customClass}`.trim();
---

<footer class=" bg-neutral-900 flex flex-col px-8 py-20 text-center gap-9 items-center leading-none max-w-full">
  <img
    src={fallbackSrc}
    srcset={avifSrcset}
    alt={alt}
    class={`${className} block max-w-full h-auto aspect-[5/1]`}
    loading={loading}
    decoding="async"
    width={typeof width === "number" ? width.toString() : width}
    height={typeof height === "number" ? height.toString() : height}
    sizes="(max-width: 900px) 200px, 300px"
  />
  <p>Copyright Â© 2024 Estudio Onamu Publicidad Dev.</p> 
</footer>