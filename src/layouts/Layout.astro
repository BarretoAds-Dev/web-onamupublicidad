---
import Head from '../layouts/Head.astro';
import Header from '../layouts/Header.astro';
import Footer from '../layouts/Footer.astro';

interface Props {
	title: string;
	description: string;
	url: string;
	image: string;

}

const { title, description, url, image } = Astro.props;
---

<!doctype html>
<!--
    “Diseñamos páginas web que transforman negocios en México.
    En OnamuPublicidad.com, damos vida a tu visión con estrategias digitales innovadoras y efectivas.”

    OnamuPublicidad.dev & BarretoAds.Dev | Transformamos Tu Visión en Realidad.
 -->
<html lang="es" dir="ltr">
	<Head title={title} description={description} url={url} image={image} />

	<body class="bg-bodydark p-0 m-0 text-fontlight font-bricolage">
        
		<Header />
		<slot />
		<Footer />
	
	</body>
</html>


<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
	
	@font-face {
		font-family: "Bricolage Grotesque Variable";
		font-style: normal;
		font-weight: 400 800;
		font-optical-sizing: auto;
		font-display: optional;
		font-stretch: normal; /* added */
		src: url("https://cdn.jsdelivr.net/fontsource/fonts/bricolage-grotesque:vf@latest/latin-wght-normal.woff2")
		  format("woff2-variations");
		unicode-range: U+0000-00FF;
		font-feature-settings: "kern", "liga", "calt";
		font-variation-settings: "wght" 400 800;
		ascent-override: 90%;
		line-gap-override: 20%;
	  }



@layer utilities {
	.shadow-neon {
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.3),
                0 0 20px rgba(255, 255, 255, 0.2),
                0 0 30px rgba(255, 255, 255, 0.1);
  }

  .neon-effect {
    box-shadow: 0 0 8px rgba(0, 255, 0, 0.7),
                0 0 16px rgba(0, 255, 0, 0.5),
                0 0 24px rgba(0, 255, 0, 0.3),
                0 0 32px rgba(0, 255, 0, 0.2);
    animation: neon-glow 0.5s ease-in-out infinite alternate;
  }

  @keyframes neon-glow {
    from {
      box-shadow: 0 0 8px rgba(0, 255, 0, 0.7),
                  0 0 16px rgba(0, 255, 0, 0.5),
                  0 0 24px rgba(0, 255, 0, 0.3),
                  0 0 32px rgba(0, 255, 0, 0.2);
    }
    to {
      box-shadow: 0 0 12px rgba(0, 255, 0, 1),
                  0 0 24px rgba(0, 255, 0, 0.8),
                  0 0 36px rgba(0, 255, 0, 0.6),
                  0 0 48px rgba(0, 255, 0, 0.4);
    }
  }
}

	</style>